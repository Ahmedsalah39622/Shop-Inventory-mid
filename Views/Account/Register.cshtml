@model ShopInventory.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "_LoginLayout";
}

<style>
    .login-container {
        min-height: 100vh;
        background: #fff;
        display: flex;
        align-items: stretch;
        position: relative;
    }
    .login-content {
        width: 45%;
        background: #ffffff;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    .bg-illustration {
        width: 55%;
        background: #0066ff;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }
    .bg-illustration::before {
        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        background-image: url('/images/factory-3d.png');
        background-size: contain;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.9;
        filter: brightness(1.1);
    }
    .form-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }
    .form-subtitle {
        color: #666;
        margin-bottom: 2rem;
        font-size: 0.95rem;
    }
    .form-group {
        margin-bottom: 1.25rem;
    }
    .form-label {
        display: block;
        color: #4a4a4a;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }
    .login-header::after {
        content: '';
        position: absolute;
        bottom: -50px;
        left: 0;
        right: 0;
        height: 50px;
        background: white;
        clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%, 50% 0);
    }
    .login-form {
        padding: 2.5rem 2rem 2rem;
    }
    .form-floating {
        margin-bottom: 1.5rem;
    }
    .form-control {
        width: 100%;
        padding: 0.75rem;
        background-color: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 4px;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    .form-control:focus {
        border-color: #0066ff;
        outline: none;
        box-shadow: none;
    }
    .btn-login {
        width: 100%;
        padding: 0.75rem;
        background: #0066ff;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 0.9rem;
        font-weight: 500;
        cursor: pointer;
        margin-top: 1rem;
    }
    .btn-login:hover {
        background: #0052cc;
    }
    .form-check-input {
        margin-right: 0.5rem;
        cursor: pointer;
    }
    .form-check-label {
        color: #666;
        font-size: 0.875rem;
    }
    .validation-message {
        margin-top: 0.5rem;
        font-size: 0.875rem;
        color: #e53e3e;
        animation: fadeIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        padding-left: 0.5rem;
        font-weight: 500;
    }
    @@keyframes fadeIn {
        from { 
            opacity: 0; 
            transform: translateY(-8px);
            filter: blur(2px);
        }
        to { 
            opacity: 1; 
            transform: translateY(0);
            filter: blur(0);
        }
    }
    /* Glass morphism effect */
    .glass-effect {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.1);
    }
</style>

<div class="login-container">
    <div class="bg-illustration"></div>
    <div class="login-content">
        <h1 class="form-title">SIGN UP</h1>
        <p class="form-subtitle">Welcome to the Shop and Inventory Smart System<br>Register as a member to experience.</p>
        <form asp-action="Register" asp-controller="Account" method="post" id="registerForm">
            <div asp-validation-summary="ModelOnly" class="text-danger validation-message"></div>
            <div class="form-group">
                <input asp-for="FullName" class="form-control" placeholder="Full Name" autofocus />
                <span asp-validation-for="FullName" class="validation-message"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="validation-message"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                <span asp-validation-for="Password" class="validation-message"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
            </div>
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="terms">
                <label class="form-check-label" for="terms">I agree to the terms of service</label>
            </div>
            <button type="submit" class="btn btn-login">
                Create Account
            </button>
            <p class="signup-text">
                Already a member? 
                <a href="@Url.Action("Login", "Account")" class="signup-link">Sign in</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}