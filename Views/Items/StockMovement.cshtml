@model IEnumerable<ShopInventory.Models.StockMovement>
@{
    ViewData["Title"] = "Stock Movement";
    Layout = "_DashboardLayout";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Stock Movement</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Products</a></li>
        <li class="breadcrumb-item active">Stock Movement</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-history me-1"></i>
            Movement History
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Quantity</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var move in Model)
                    {
                        <tr>
                            <td>@move.Date.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@move.MovementType</td>
                            <td>@move.Quantity</td>
                            <td>@move.Reference</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
