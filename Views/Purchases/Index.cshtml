@model IEnumerable<ShopInventory.Models.InvoiceListItem>
@{
    ViewData["Title"] = "نظرة عامة على المشتريات";
    Layout = "_DashboardLayout";
    // Period label can be provided by the controller via ViewData["PeriodLabel"].
    // If not provided, compute it based on whether filters exist on the query string.
    var qTop = Context.Request.Query;
    bool hasGlobalFilter = !string.IsNullOrWhiteSpace(qTop["startDate"]) || !string.IsNullOrWhiteSpace(qTop["endDate"]) || !string.IsNullOrWhiteSpace(qTop["searchTerm"]);
    var periodLabel = ViewData["PeriodLabel"] as string;
    if (string.IsNullOrWhiteSpace(periodLabel))
    {
        periodLabel = hasGlobalFilter ? "حسب الفلتر" : "اليوم";
    }
    // store for use in this view
    ViewData["_ComputedPeriodLabel"] = periodLabel;
}
<div class="container-fluid px-4">
    <h1 class="mt-4">نظرة عامة على المشتريات</h1>

    <!-- كارت باقي النقود للعملاء وكارت الربح الصافي -->

    <div class="row mb-4">
        <!-- Status Card (Running/Stopped) -->
        <div class="col-xl-4">
            <div class="card h-100 border border-light" style="background: white; box-shadow: 0 2px 8px rgba(0,0,0,0.05);">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-wallet text-muted" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-1">باقي النقود للعملاء</h3>
                    @{ 
                        // choose filtered balance when filters present, otherwise today's balance
                        var q0 = Context.Request.Query;
                        bool hasFilter0 = !string.IsNullOrWhiteSpace(q0["startDate"]) || !string.IsNullOrWhiteSpace(q0["endDate"]) || !string.IsNullOrWhiteSpace(q0["searchTerm"]);
                        decimal balanceToShow = 0m;
                        if (hasFilter0 && ViewData["TotalAllInvoicesBalanceFiltered"] is decimal bf)
                        {
                            balanceToShow = bf;
                        }
                        else if (ViewData["TotalAllInvoicesBalanceToday"] is decimal bt)
                        {
                            balanceToShow = bt;
                        }
                    }
                    <div class="text-muted" style="font-size: 0.9rem;">@((hasFilter0 ? "حسب الفلتر" : "اليوم"))</div>
                    <div class="mt-3">
                        <span style="font-size: 2.5rem; font-weight: 500;">@balanceToShow.ToString("C")</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Amount Difference Card -->
        <div class="col-xl-4">
            <div class="card h-100 border-0" style="background: linear-gradient(135deg, #2c1f63, #4a3491); box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <div class="card-body d-flex align-items-center justify-content-between" style="min-height:120px;">
                    <div class="flex-fill">
                        <div class="text-white-50 mb-3" style="font-size:1.1rem;">صافى الربح اليومى</div>
                        <div class="text-white" style="font-size:2.5rem;line-height:1.1;font-weight:300;">
                            @{ 
                                // If filters are present, use FilteredNetProfit, otherwise use DailyNetProfit
                                decimal displayProfit = 0m;
                                bool hasFilter = false;
                                // detect filter presence from query string
                                var q = Context.Request.Query;
                                if (!string.IsNullOrWhiteSpace(q["startDate"]) || !string.IsNullOrWhiteSpace(q["endDate"]) || !string.IsNullOrWhiteSpace(q["searchTerm"]))
                                    hasFilter = true;

                                if (hasFilter && ViewData["FilteredNetProfit"] is decimal fp)
                                {
                                    displayProfit = fp;
                                }
                                else if (ViewData["DailyNetProfit"] is decimal dp)
                                {
                                    displayProfit = dp;
                                }

                                string sign = displayProfit >= 0 ? "+" : "";
                            }
                            <span class="@(displayProfit >= 0 ? "text-white" : "text-danger")">@(sign + displayProfit.ToString("C"))</span>
                        </div>
                    </div>
                    <div style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 1rem;">
                        <i class="fas fa-calculator text-white fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
        <!-- Modern Remaining Money Card -->
        <div class="col-xl-4">
            <div class="card h-100 border-0" style="background: linear-gradient(135deg, #23547b, #1a6ba6); box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="text-white" style="font-size:1.1rem;">
                                    <i class="fas fa-undo-alt me-2"></i>
                                    المرتجعات (المعتمدة)
                                </div>
                        <div style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 0.7rem;">
                            <i class="fas fa-wallet text-white"></i>
                        </div>
                    </div>
                    
                    @{ 
                        var q2 = Context.Request.Query;
                        bool hasFilter2 = !string.IsNullOrWhiteSpace(q2["startDate"]) || !string.IsNullOrWhiteSpace(q2["endDate"]) || !string.IsNullOrWhiteSpace(q2["searchTerm"]);
                        int returnsCount = 0;
                        decimal returnsTotal = 0m;
                        if (hasFilter2 && ViewData["FilteredReturnsCount"] is int frc && ViewData["FilteredReturnsTotal"] is decimal frt)
                        {
                            returnsCount = frc;
                            returnsTotal = frt;
                        }
                        else if (ViewData["TodayReturnsCount"] is int trc && ViewData["TodayReturnsTotal"] is decimal trt)
                        {
                            returnsCount = trc;
                            returnsTotal = trt;
                        }
                    }
                    <div style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px);" class="p-3 rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-white-50">عدد المرتجعات المعتمدة</div>
                            <div class="text-white h5 mb-0">@returnsCount</div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <div class="text-white-50">إجمالي مبلغ المرتجعات</div>
                            <div class="text-white h5 mb-0">@returnsTotal.ToString("C")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-xl-4">
            <div class="card border-0 h-100" style="background: linear-gradient(135deg, #34495e, #2c3e50); box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 mb-2" style="font-size: 1.1rem;">إجمالي اليوم</div>
                            <div class="text-white" style="font-size: 2rem; font-weight: 300;">@((ViewData["TodayPurchasesAmount"] as decimal?).GetValueOrDefault().ToString("C"))</div>
                        </div>
                        <div style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 1rem;">
                            <i class="fas fa-shopping-cart text-white fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card border-0 h-100" style="background: linear-gradient(135deg, #702459, #553c9a); box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            @{
                                // When filters are present, show filtered net profit (FilteredNetProfit) as the main number
                                var q3 = Context.Request.Query;
                                bool hasFilter3 = !string.IsNullOrWhiteSpace(q3["startDate"]) || !string.IsNullOrWhiteSpace(q3["endDate"]) || !string.IsNullOrWhiteSpace(q3["searchTerm"]);
                                decimal displayMainValue = 0m;
                                string mainLabel = "إجمالي حسب الفلتر";
                                if (hasFilter3 && ViewData["FilteredNetProfit"] is decimal fnp)
                                {
                                    displayMainValue = fnp;
                                    mainLabel = "صافي الربح (حسب الفلتر)";
                                }
                                else
                                {
                                    displayMainValue = (ViewData["TotalPurchasesAmount"] as decimal?) ?? 0m;
                                }
                            }
                            <div class="text-white-50 mb-2" style="font-size: 1.1rem;">
                                @mainLabel
                                <span class="badge" style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); font-size: 0.8rem; color: white;">@(ViewData["_ComputedPeriodLabel"] as string)</span>
                            </div>
                            <div class="text-white" style="font-size: 2rem; font-weight: 300;">@displayMainValue.ToString("C")</div>
                        </div>
                        <div style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 1rem;">
                            <i class="fas fa-chart-bar text-white fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4">
            <div class="card border-0 h-100" style="background: linear-gradient(135deg, #614385, #516395); box-shadow: 0 4px 20px rgba(0,0,0,0.1);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-white-50 mb-2" style="font-size: 1.1rem;">عدد حسب الفلتر</div>
                            <div class="text-white" style="font-size: 2rem; font-weight: 300;">@ViewData["TotalPurchasesCount"]</div>
                        </div>
                        <div style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px); border-radius: 12px; padding: 1rem;">
                            <i class="fas fa-file-invoice text-white fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter card styled like dashboard metric cards -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0" style="background: linear-gradient(135deg, #1f3a8a, #3b82f6); box-shadow: 0 4px 18px rgba(0,0,0,0.08);">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="d-flex align-items-center">
                            <div style="background: rgba(255,255,255,0.08); border-radius:10px; padding:12px; margin-inline-end:12px;">
                                <i class="fas fa-filter text-white fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 text-white">بحث وتصفية</h5>
                                <div class="text-white-50" style="font-size:0.95rem;">استخدم الفلاتر أدناه لتضييق النتائج</div>
                            </div>
                        </div>
                        <div>
                            <span class="badge" style="background: rgba(255,255,255,0.12); color: white;">@(ViewData["_ComputedPeriodLabel"] as string)</span>
                        </div>
                    </div>

                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label for="startDate" class="form-label text-white">من تاريخ</label>
                            <input type="date" class="form-control bg-white" id="startDate" name="startDate" value="@Context.Request.Query["startDate"]" />
                        </div>
                        <div class="col-md-3">
                            <label for="endDate" class="form-label text-white">إلى تاريخ</label>
                            <input type="date" class="form-control bg-white" id="endDate" name="endDate" value="@Context.Request.Query["endDate"]" />
                        </div>
                        <div class="col-md-4">
                            <label for="searchTerm" class="form-label text-white">بحث</label>
                            <input type="text" class="form-control bg-white" id="searchTerm" name="searchTerm" value="@Context.Request.Query["searchTerm"]" placeholder="البحث برقم الفاتورة، المورد، المستخدم..." />
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-light w-100">
                                <i class="bi bi-search"></i> تصفية
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Table card -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>رقم الفاتورة</th>
                            <th>التاريخ</th>
                            <th>المورد</th>
                            <th>الأصناف</th>
                            <th>إجمالي المبلغ</th>
                            <th>تم الإنشاء بواسطة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@($"/Purchases/Details/{item.InvoiceNumber}")" class="text-primary" title="Open Invoice Details">@item.InvoiceNumber</a>
                                    @if (!item.IsPurchase)
                                    {
                                        <span class="badge bg-secondary ms-2">Sale</span>
                                    }
                                </td>
                                <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@item.PartyName</td>
                                <td>@item.ItemsCount</td>
                                <td>@item.TotalAmount.ToString("C")</td>
                                <td>@item.CreatedBy</td>
                                <td>
                                    <a asp-controller="Returns" asp-action="Create" asp-route-invoiceNumber="@item.InvoiceNumber" class="btn btn-sm btn-outline-primary" title="مرتجع">
                                        <i class="fas fa-undo-alt" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
