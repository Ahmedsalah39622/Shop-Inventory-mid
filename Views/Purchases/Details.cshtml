@model ShopInventory.Models.PurchaseInvoice
@{
    ViewData["Title"] = "تفاصيل فاتورة المشتريات";
    Layout = "_DashboardLayout";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">تفاصيل فاتورة المشتريات</h1>
        <div>
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-right ml-1"></i> رجوع
            </a>
            <a href="#" onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print ml-1"></i> طباعة
            </a>
        </div>
    </div>

    <!-- Invoice Summary Cards -->
    <div class="row mb-4">
        <!-- Invoice Info Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-invoice me-2"></i>
                        معلومات الفاتورة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted mb-1">رقم الفاتورة</label>
                        <p class="h5">@Model.InvoiceNumber</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted mb-1">التاريخ</label>
                        <p class="h5">@Model.Date.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted mb-1">اسم المورد</label>
                        <p class="h5">@(string.IsNullOrWhiteSpace(Model.ClientName) ? "-" : Model.ClientName)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Info Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-money-bill-wave me-2"></i>
                        معلومات الدفع
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted mb-1">إجمالي المبلغ</label>
                        <p class="h5">@Model.TotalAmount.ToString("C")</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted mb-1">المبلغ المدفوع</label>
                        <p class="h5">@Model.PaidAmount.ToString("C")</p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted mb-1">المبلغ المتبقي</label>
                        <p class="h5">@((Model.TotalAmount - Model.PaidAmount).ToString("C"))</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Card -->
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        حالة الفاتورة
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="text-muted mb-1">حالة الدفع</label>
                        @{
                            var statusClass = Model.PaidAmount >= Model.TotalAmount ? "success" :
                                            Model.PaidAmount > 0 ? "warning" : "danger";
                            var statusText = Model.PaidAmount >= Model.TotalAmount ? "مدفوع بالكامل" :
                                           Model.PaidAmount > 0 ? "مدفوع جزئيا" : "غير مدفوع";
                        }
                        <p class="h5">
                            <span class="badge bg-@statusClass">@statusText</span>
                        </p>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted mb-1">تم الإنشاء بواسطة</label>
                        <p class="h5">@(Model.CreatedByUser?.FullName ?? Model.CreatedByUserId)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Items Table Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-shopping-cart me-2"></i>
                تفاصيل المشتريات
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>كود المنتج</th>
                            <th>اسم المنتج</th>
                            <th>اسم المورد</th>
                            <th>الكمية</th>
                            <th>سعر الوحدة</th>
                            <th>الإجمالي</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ProductCode</td>
                                <td>@item.ItemName</td>
                                <td>@(string.IsNullOrWhiteSpace(item.ClientName) ? "-" : item.ClientName)</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@item.Total.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end"><strong>الإجمالي</strong></td>
                            <td>@Model.Items.Sum(i => i.Quantity)</td>
                            <td></td>
                            <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style type="text/css">
        .card {
            transition: transform 0.2s ease-in-out;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .table th, .table td {
            vertical-align: middle;
        }
        @@media print {
            .btn, .navbar, .sidebar {
                display: none !important;
            }
            .card {
                break-inside: avoid;
            }
        }
    </style>
}
