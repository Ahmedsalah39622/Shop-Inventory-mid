@model IEnumerable<ShopInventory.Models.PurchaseInvoiceItem>
@{
    ViewData["Title"] = "Purchases Reports";
    var isPrint = Context.Request.Query["print"] == "true";
    Layout = isPrint ? null : "_DashboardLayout";
}
@if (isPrint)
{
    <style>
        body { background: #fff !important; }
        .container-fluid { margin: 0; padding: 0; }
        .card, .card-body, .card-header, .card-footer { border: none !important; box-shadow: none !important; }
        h1, .table { margin-top: 0 !important; }
        table.print-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1.5rem;
            font-size: 1.05rem;
        }
        table.print-table th, table.print-table td {
            border: 1px solid #333;
            padding: 8px 14px;
            text-align: left;
        }
        table.print-table th {
            background: #f2f2f2;
            font-weight: bold;
        }
        table.print-table tr:nth-child(even) {
            background: #fafafa;
        }
        table.print-table tr:hover {
            background: #e6f7ff;
        }
    </style>
    <script>window.onload = function() { window.print(); }</script>
}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
        <h1 class="mb-0">Purchases Reports</h1>
        @if (!isPrint)
        {
            <form method="get" class="d-flex align-items-center gap-2" style="margin-bottom:0;">
                <label class="mb-0">From:</label>
                <input type="date" name="startDate" class="form-control form-control-sm" value="@Context.Request.Query["startDate"]" style="width: 150px;" />
                <label class="mb-0">To:</label>
                <input type="date" name="endDate" class="form-control form-control-sm" value="@Context.Request.Query["endDate"]" style="width: 150px;" />
                <button type="submit" class="btn btn-sm btn-primary">Filter</button>
                <button class="btn btn-outline-primary ms-2" type="button" onclick="printWithFilter()">
                    <i class="fas fa-print"></i> Print
                </button>
                <a class="btn btn-outline-success ms-2" href="@Url.Action("ExportSales", "Reports", new { startDate = Context.Request.Query["startDate"], endDate = Context.Request.Query["endDate"], format = "excel" })">
                    <i class="fas fa-file-excel"></i> Export Excel
                </a>
                <script>
                    function printWithFilter() {
                        const params = new URLSearchParams(window.location.search);
                        params.set('print', 'true');
                        window.open(window.location.pathname + '?' + params.toString(), '_blank');
                    }
                </script>
            </form>
        }
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="@(isPrint ? "print-table" : "table table-bordered table-hover align-middle")">
                    <thead class="table-light">
                        <tr>
                            <th>Invoice #</th>
                            <th>Product Code</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                            <th>Items</th>
                            <th>Status</th>
                            <th>Created By</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><a href="/Purchases/Details/@item.PurchaseInvoiceId" target="_blank">@item.InvoiceNumber</a></td>
                                <td>@item.ProductCode</td>
                                <td>@item.ItemName</td>
                                <td>@item.Quantity.ToString("N3")</td>
                                <td>@item.UnitPrice.ToString("C2")</td>
                                <td>@item.Total.ToString("C2")</td>
                                <td>@item.PurchaseInvoice?.Items?.Count()</td>
                                <td>
                                    @if (item.Status == "Paid")
                                    {
                                        <span class="badge bg-success">Paid</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>@item.CreatedByUserName</td>
                                <td>@item.Date.ToString("M/d/yyyy h:mm tt")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
