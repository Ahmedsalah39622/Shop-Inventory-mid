@{
    ViewData["Title"] = "Reports";
    Layout = "_DashboardLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Reports</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Reports Dashboard</li>
    </ol>

    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-chart-line fa-3x text-primary"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Sales Reports</h5>
                            <div class="small text-muted">Daily, Monthly, and Annual Sales Analysis</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Sales" class="btn btn-primary flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Sales Reports
                        </a>
                        <button type="button" class="btn btn-outline-primary" onclick="window.open('@Url.Action("Sales", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-boxes fa-3x text-success"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Inventory Reports</h5>
                            <div class="small text-muted">Stock Levels and Movement History</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Inventory" class="btn btn-success flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Inventory Reports
                        </a>
                        <button type="button" class="btn btn-outline-success" onclick="window.open('@Url.Action("Inventory", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-users fa-3x text-info"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Customer Reports</h5>
                            <div class="small text-muted">Customer Activity and Balances</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Customers" class="btn btn-info flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Customer Reports
                        </a>
                        <button type="button" class="btn btn-outline-info" onclick="window.open('@Url.Action("Customers", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-truck fa-3x text-warning"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Supplier Reports</h5>
                            <div class="small text-muted">Purchase History and Supplier Activity</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Suppliers" class="btn btn-warning flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Supplier Reports
                        </a>
                        <button type="button" class="btn btn-outline-warning" onclick="window.open('@Url.Action("Suppliers", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-chart-pie fa-3x text-danger"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Financial Reports</h5>
                            <div class="small text-muted">Profit & Loss, Revenue Analysis</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="Financial" class="btn btn-danger flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Financial Reports
                        </a>
                        <button type="button" class="btn btn-outline-danger" onclick="window.open('@Url.Action("Financial", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <i class="fas fa-history fa-3x text-secondary"></i>
                        </div>
                        <div class="ms-3">
                            <h5 class="card-title mb-1">Activity Logs</h5>
                            <div class="small text-muted">System and User Activity History</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-2">
                        <a asp-action="ActivityLogs" class="btn btn-secondary flex-fill">
                            <i class="fas fa-file-alt me-1"></i> View Activity Logs
                        </a>
                        <button type="button" class="btn btn-outline-secondary" onclick="window.open('@Url.Action("ActivityLogs", "Reports") + "?print=true"', '_blank');">
                            <i class="fas fa-print"></i> Print
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>