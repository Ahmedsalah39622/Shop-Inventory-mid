@model IEnumerable<ShopInventory.Models.StockMovement>
@{
    ViewData["Title"] = "كل حركات المخزون";
    Layout = "_DashboardLayout";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">كل حركات المخزون</h1>
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>المنتج</th>
                            <th>النوع</th>
                            <th>الكمية</th>
                            <th>التاريخ</th>
                            <th>الوصف</th>
                            <th>بواسطة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var m in Model)
                        {
                            <tr>
                                <td>@(m.Product != null ? m.Product.Name : "-")</td>
                                <td>@m.MovementType</td>
                                <td>@m.Quantity</td>
                                <td>@m.Date.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @{
                                        var desc = m.Reference;
                                        if (desc != null)
                                        {
                                            desc = desc.Replace("Initial stock for item", "إضافة أولية للمنتج رقم")
                                                       .Replace("Approved", "تمت الموافقة")
                                                       .Replace("Return", "مرتجع")
                                                       .Replace("إضافة بضاعة جديدة بتاريخ إنتاج", "إضافة بضاعة جديدة بتاريخ إنتاج");
                                        }
                                        string expiry = "";
                                        if (m.Product != null && m.Product.CurrentStock > 0 && m.Product is ShopInventory.Models.Product)
                                        {
                                            // لا يوجد تاريخ انتهاء في Product، نبحث في Item
                                            var item = ViewBag.Items != null ? ((IEnumerable<ShopInventory.Models.Item>)ViewBag.Items).FirstOrDefault(i => i.Name == m.Product.Name) : null;
                                            if (item != null && item.ExpiryDate.HasValue)
                                            {
                                                expiry = $" | تاريخ الانتهاء: {item.ExpiryDate.Value:yyyy-MM-dd}";
                                            }
                                        }
                                        @desc @expiry
                                    }
                                </td>
                                <td>@(m.CreatedByUser != null ? m.CreatedByUser.FullName ?? m.CreatedByUser.UserName : "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
