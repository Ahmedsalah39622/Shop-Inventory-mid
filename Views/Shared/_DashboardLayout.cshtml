<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام المخزون</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/statistics.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rtl.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slim-sidebar.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 d-flex align-items-center" href="#" style="gap:0.5rem;">
            <img src="~/images/logo.svg" alt="Shop Inventory" style="height:28px; width:auto; display:inline-block;" />
            <span class="brand-text d-none d-md-inline" style="color:#fff; font-weight:700;">نظام المخزون</span>
        </a>
        <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="w-100"></div>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="nav-link px-3 bg-dark border-0">تسجيل خروج</button>
                </form>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-auto d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                               asp-controller="Dashboard" asp-action="Index" title="لوحة التحكم">
                                <i class="fas fa-tachometer-alt"></i>
                                <span class="nav-link-text">لوحة التحكم</span>
                            </a>
                    <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                        <span>الإدارة</span>
                    </h6>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
                               asp-controller="Users" asp-action="Index" title="المستخدمين">
                                <i class="fas fa-user-cog"></i>
                                <span class="nav-link-text">المستخدمين</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Items" ? "active" : "")"
                               asp-controller="Items" asp-action="Index" title="المخزون">
                                <i class="fas fa-box"></i>
                                <span class="nav-link-text">المخزون</span>
                            </a>
                        </li>
                    </ul>
                    <ul class="nav flex-column mb-2">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Purchases" ? "active" : "")"
                               asp-controller="Purchases" asp-action="Index" title="اخر المبيعات">
                                <i class="fas fa-history"></i>
                                <span class="nav-link-text">اخر المبيعات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Customers" ? "active" : "")"
                               asp-controller="Customers" asp-action="Index" title="العملاء">
                                <i class="fas fa-users"></i>
                                <span class="nav-link-text">العملاء</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Installments" ? "active" : "")"
                               asp-controller="Installments" asp-action="Index" title="التقسيط">
                                <i class="fas fa-calendar-alt"></i>
                                <span class="nav-link-text">التقسيط</span>
                            </a>
                        </li>
                    </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Suppliers" ? "active" : "")"
                               asp-controller="Suppliers" asp-action="Index" title="الموردين">
                                <i class="fas fa-truck"></i>
                                <span class="nav-link-text">الموردين</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Returns" ? "active" : "")"
                               asp-controller="Returns" asp-action="Index" title="المرتجعات">
                                <i class="fas fa-undo-alt"></i>
                                <span class="nav-link-text">المرتجعات</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Reports" ? "active" : "")"
                               asp-controller="Reports" asp-action="Index" title="التقارير">
                                <i class="fas fa-chart-bar"></i>
                                <span class="nav-link-text">التقارير</span>
                            </a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "StockMovements" ? "active" : "")"
                                   asp-controller="StockMovements" asp-action="Index" title="حركات المخزون">
                                    <i class="fas fa-exchange-alt"></i>
                                    <span class="nav-link-text">حركات المخزون</span>
                                </a>
                            </li>
                    </ul>

                   
                </div>
            </nav>

            <main class="main-content col px-md-4" style="padding-bottom: 60px;">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/chart.umd.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/datatables-init.js" asp-append-version="true"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="footer py-2 bg-dark text-white">
        <div class="container-fluid">
            <div class="d-flex justify-content-center align-items-center">
                <div class="copyright">
                    <span>&copy; @DateTime.Now.Year Shop Inventory</span>
                    <span class="mx-2">|</span>
                    <span>Made by <a href="#" class="contact-link">Eng. Ahmed Mahmoud Salah</a></span>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Footer animation on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const footer = document.querySelector('.footer');
            const options = {
                root: null,
                rootMargin: '0px',
                threshold: 0.1
            };

            const observer = new IntersectionObserver(function(entries) {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        footer.classList.add('visible');
                    }
                });
            }, options);

            observer.observe(footer);
        });

        // Contact link handler - replace '#' with your actual contact link
        document.querySelector('.contact-link').addEventListener('click', function(e) {
            e.preventDefault();
            // Replace this URL with your actual contact information link
            window.location.href = 'YOUR_CONTACT_LINK_HERE';
        });
    </script>
</body>
</html>